<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3" id="chipper-box">
      <h3>Reply</h3>
      <%= form_for @reply, url: { new_tweet_reply_path } do |f| %>
      <%= f.text_area :body %>
      <br>
      <%= f.submit "Submit" %>
      <%= link_to "Cancel", tweets_path, :id => 'cancel-button' %>
      <% end %>
    </div>
  </div>
</div>
