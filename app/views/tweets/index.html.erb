
<div class='container', id = 'landing_page'>

  <div class='row'>
    <div class="col-sm-12">
      <nav class="navbar navbar-inverse" id="top-navbar">
        <div class="container-fluid">
          <div class="navbar-header">
            <%= image_tag "chipper-icon.png", :class => 'logo' %>
          </div>
          <ul class="nav navbar-nav">
            <li><%= link_to :Home, tweets_path %></li>
            <li><a href="#">About</a></li>
            <li><%= link_to "New Chipper", new_tweet_path, id: 'new_chipper', remote: true %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <li>
              <%= link_to edit_user_registration_path do%>
              <span class="glyphicon glyphicon-user"></span>Edit Profile
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do%>
              <span class="glyphicon glyphicon-log-in"></span>Log Out
              <% end %>
            </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-7">
      <div class="card text-center">
        <% @tweets.each do |tweet| %>
        <div class="card-header">
          "Quote of the Day" 
        </div>
        <div class="card-block">
          <p class="card-title"><%= tweet.body %></p>
          <% tweet.replies.each do |reply| %>
          <p class="card-text"><%= reply.body %></p>
          <% end %>
        </div>
        <div class="card-footer text-muted">
          <% if tweet.user == current_user %>
          <%= link_to :Edit, edit_tweet_path(tweet), :class => "post-bottom-button" %>
          <%= link_to :Delete, tweet_path(tweet), method: :delete, data:{ confirm: "Are you sure?" }, :class => "post-bottom-button" %>
          <% end %>
          <%= link_to :Reply, new_tweet_reply_path(tweet), :class => "post-bottom-button" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>




</div>
