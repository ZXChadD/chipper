<div class='row'>

  <div class="col-sm-7">
    <div class="card text-center">
      <% @tweets.each do |tweet| %>
      <div class="card-header">
        "Quote of the Day"
      </div>
      <div class="card-block">
        <span class="card-title"><%= image_tag tweet.user.avatar, class: "img-thumbnail" %> @<%=link_to tweet.user.username, user_path(tweet.user.id)%> : <%= tweet.body %></span>
        <p><%= raw tag_links(tweet.all_tags) %></p>
        <% tweet.replies.each do |reply| %>
        <p class="card-text">@<%= reply.user.username %> : <%= reply.body %></p>
        <% end %>
        <%= link_to "Retweet", retweet_tweet_path(tweet) %>
      </div>
      <div class="card-footer text-muted">
        <% if tweet.user == current_user %>
          <%= link_to :Edit, edit_tweet_path(tweet), :class => "post-bottom-button" %>
          <%= link_to :Delete, tweet_path(tweet), method: :delete, data:{ confirm: "Are you sure?" }, :class => "post-bottom-button" %>
        <% end %>
        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myReply">
          <%= link_to :Reply, new_tweet_reply_path(tweet), remote: true %>
        </button>
        <%= pluralize(tweet.likes.count, "like") %>
        <%= button_to tweet.likes.count, upvote_tweet_path(tweet), method: :post, remote: true %>
      </div>

      <div class="modal fade" id="myReply" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-body">
              <div id="tweet_form_container">
                <div class="container">
                  <div class="row">
                    <div class="col-sm-6" id="chipper-box">
                      <h3>Reply</h3>
                      <%= form_for @reply, url: tweet_replies_path(tweet) do |f| %>
                      <%= f.text_field :body %>
                      <br>
                      <%= f.submit "Submit" %>
                      <%= link_to "Cancel", tweets_path, :id => 'cancel-button' %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>

</div>
