<h1><%= @user.email %></h1>
<div id = 'follow_button_container'>
  <%= render partial: 'follow_button' %>
</div>

<div class='row'>

  <div class="col-sm-7">
    <div class="card text-center">
      <% @user.tweets.pluck(:body).each do |t| %>
        <div class="card-header">
          "Quote of the Day"
        </div>
        <div class="card-block">
          <span class="card-title"><%= t %></span>
        </div>
        <div class="card-footer text-muted">
      <% end %>
      <% @user.tweets.pluck(:id).each do |i| %>
        <% if @user == current_user %>
        <%= link_to :Edit, edit_tweet_path(i), :class => "post-bottom-button" %>
        <%= link_to :Delete, tweet_path(i), method: :delete, data:{ confirm: "Are you sure?" }, :class => "post-bottom-button" %>
      <% end %>
      </div>
      <% end %>
    </div>
  </div>

</div>
