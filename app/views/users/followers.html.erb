<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= image_tag @user.avatar %>
      <h1><%= @user.username %></h1>
      <span><%= link_to "View my profile", @user %></span>
      <span><b>Tweets:</b> <%= @user.tweets.count %></span>
    </section>
    <section class="stats_following">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <% @users.pluck(:follower_id).each do |id| %>
          <%= image_tag User.find(id).avatar, class: "img-thumbnail" %>
          <%= link_to User.find(id).username, user_path(User.find(id)) %>
        <% end %>
        <hr>
      </ul>
    <% end %>
  </div>
</div>
